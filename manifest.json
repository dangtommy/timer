{
  "manifest_version": 2,
  "name": "Timer Extension",
  "description": "This extension shows how much time is spent on websites",
  "version": "1.0",

  "background": {
  		"scripts": ["background.js"]
  },

  "browser_action": {
		"default_popup": "popup.html"
  },

  "permissions": [
  "tabs",
  "activeTab",
  "webNavigation",
  "storage"
  ]
}
