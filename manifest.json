{
  "manifest_version": 2,
  "name": "Website Usage Timer",
  "description": "This extension shows how much time is spent on websites",
  "version": "1.0",

  "icons": { "128" : "timer128.png"
  },
  "background": {
  		"scripts": ["background.js"]
  },

  "browser_action": {
		"default_popup": "popup.html"
  },

  "permissions": [
  "tabs",
  "activeTab",
  "webNavigation",
  "storage",
  "http://*/*",
  "https://*/*"
  ],

  "content_scripts": [
	{
		"matches": ["http://*/*", "https://*/*"],
		"js": ["content.js"],
		"run_at": "document_end"
	}
  ]
}

